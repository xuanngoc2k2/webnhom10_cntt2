@model WEBNHOM10.Models.Phong
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Sửa phòng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<h1>Sửa phòng</h1>

<h4>Phòng</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <img style="max-width:100%" src="../../Images/Phong/@Model.AnhDaiDienPhong"/>
    </div>
    <div class="col-md-8">
        <form asp-action="SuaPhong" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaPhong" />
            <div class="form-group">
                <label asp-for="TenPhong" class="control-label"></label>
                <input asp-for="TenPhong" class="form-control" />
                <span asp-validation-for="TenPhong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Songuoitoida" class="control-label"></label>
                <input asp-for="Songuoitoida" class="form-control" />
                <span asp-validation-for="Songuoitoida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoaiPhong" class="control-label"></label>
                <input asp-for="LoaiPhong" class="form-control" />
                <span asp-validation-for="LoaiPhong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Songuoidango" class="control-label"></label>
                <input asp-for="Songuoidango" class="form-control" />
                <span asp-validation-for="Songuoidango" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GiaPhong" class="control-label"></label>
                <input asp-for="GiaPhong" class="form-control" />
                <span asp-validation-for="GiaPhong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ghichu" class="control-label"></label>
                <input asp-for="Ghichu" class="form-control" />
                <span asp-validation-for="Ghichu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaNha" class="control-label"></label>
                <select asp-for="MaNha" class="form-control" asp-items="ViewBag.MaNha"></select>
                <span asp-validation-for="MaNha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagePhong" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="ImagePhong" class="custom-file-input" id="FLFrontImage" />
                    <label class="custom-file-label" for="FLFrontImage">Chọn ảnh</label>
                </div>
                <span asp-validation-for="ImagePhong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<script>
    document.getElementById("FLFrontImage").onchange = function () {
        var fileName = this.value.split("\\").pop();
        var label = document.querySelector(".custom-file-label");
        label.innerHTML = fileName;
    };
</script>