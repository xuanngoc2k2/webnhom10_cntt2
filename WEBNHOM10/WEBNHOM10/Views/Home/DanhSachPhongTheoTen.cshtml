@model IEnumerable<WEBNHOM10.Models.Phong>
@{
    ViewData["Title"] = "DanhSachPhongTheoTeen";
    Layout = "~/Views/Shared/_LayoutNarBar.cshtml";
}
<section class="shop_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>
                Danh sách phòng
            </h2>
        </div>
        <form method="get" action="@Url.Action("DanhSachPhongTheoTen", "Home")">
            <div class="form-group">
                <input type="text" name="searchString" class="form-control" placeholder="Tìm kiếm phòng theo tên">
            </div>
            <div class="form-group">
                <label for="priceFilter">Lọc theo giá:</label>
                <select name="priceFilter" class="form-control">
                    <option value="">Tất cả</option>
                    <option value="1">Dưới 1,5 triệu</option>
                    <option value="2">Từ 1,5 đến 2 triệu</option>
                    <option value="3">Từ 2 đến 3 triệu</option>
                    <option value="4">Trên 3 triệu</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Tìm kiếm</button>
        </form>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-sm-6 col-xl-4">
                    <div class="box">
                        <a href="">
                            <div class="img-box">
                                <img src="@Url.Content("../Images/Phong/"+item.AnhDaiDienPhong)" alt="">
                            </div>
                            <div class="detail-box">
                                <h6>
                                    <a asp-action="ChiTietPhong" asp-route-id="@item.MaPhong">@item.TenPhong</a>
                                </h6>
                                <h6>
                                    Price:
                                    <span>
                                        @item.GiaPhong.Value.ToString("#,##0") VND
                                    </span>
                                </h6>
                            </div>
                            <div class="new">
                                <span>
                                    Phòng đẹp
                                </span>
                            </div>
                        </a>
                    </div>
                </div>
            }

        </div>

    </div>
</section>